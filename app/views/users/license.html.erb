<section class="bg-gray-900 mt-20 min-h-[calc(100vh-88px)]">
  <div class="py-8 sm:px-4 mx-auto lg:py-16">
    <div class="bg-gray-800 border border-gray-700 rounded-lg lg:p-8 md:p-12 mb-8 mx-2 p-2">
      <div class="flex flex-col justify-center items-center pb-5">
        <h1 class="m-2 text-gray-400 p-2 text-base sm:text-lg md:text-2xl">license Information</h1>
        <!--New Form-->
        <%= form_with(model: @license, url: create_license_path) do |f| %>
          <!--Errors-->
          <% if f.object.errors.any? %>
            <div>
              <% f.object.errors.full_messages.each do |message|  %>
                <div class="text-red-500"><%= message %></div>
              <% end %>
            </div>
          <% end %>
          <!---->
          <div class="flex flex-col my-2 lg:mx-5 md:p-4 rounded-lg md:border border-gray-700">
            <div class="border border-gray-600 rounded-lg m-2 p-1">
              <div class="flex text-gray-200 m-1">
                <h4 class="text-gray-400 mx-1">Full Name: </h4>
                <%= @user.full_name %>
              </div>
              <div class="flex text-gray-200 m-1">
                <h4 class="text-gray-400 mx-1">Email: </h4>
                <%= @user.email %>
              </div>
              <div class="flex text-gray-200 m-1">
                <h4 class="text-gray-400 mx-1">Phone: </h4>
                <%= @user.phone %>
              </div>
              <% if current_user.address.present?%>
                <div class="flex text-gray-200 m-1">
                  <h4 class="text-gray-400 mx-1">Address: </h4>
                  <%= current_user.address.first.address_1 %>
                </div>
              <% end %>
            </div>
            <div class="m-2">
              <%= f.label :dob, "Date of Birth", class: "block mb-2 text-sm font-medium text-white px-3" %>
              <%= f.text_field :dob, placeholder: "May 15, 2001.", class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
            </div>
            <div class="m-2">
              <%= f.label :lic_class, "License Class", class: "block mb-2 text-sm font-medium text-white px-3" %>
              <%= f.text_field :lic_class, placeholder: "Class A, B, C...", class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
            </div>
            <div class="m-2">
              <%= f.label :lic_exp, "Experience", class: "block mb-2 text-sm font-medium text-white px-3" %>
              <%= f.text_field :lic_exp, placeholder: "1 - 5 months, 2 years", class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
            </div>
            <div class="m-2">
              <%#= f.label :lic_endorsements, "Endorsements", class: "block mb-2 text-sm font-medium text-white px-3" %>
              <% License::LIC_ENDORSEMENTS.each do |key| %>
                <%#= f.check_box :lic_endorsements, { multiple: true, value: key, checked: f.object.lic_endorsements&.include?(key.to_s) }, key: nil %>
                <%= f.check_box :lic_endorsements, { multiple: true, checked: f.object.lic_endorsements&.include?(key.to_s) }, key: nil %>
                <%= f.label key %>
              <% end %>
              <%#= f.text_field :lic_endorsements, placeholder: "Hazmat, Tanker", class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
            </div>
            <div class="text-white m-2">
              <%= f.label :military, "Current Military?" %>
              <%= f.check_box :current, checked: false  %>
              <p class="text-xs text-orange-300 text-left">* Yes is checked, no is not checked *</p>
            </div>
            <div class="text-white m-2">
              <%= f.label :veteran, "Veteran?" %>
              <%= f.check_box :current, checked: false  %>
              <p class="text-xs text-orange-300 text-left">* Yes is checked, no is not checked *</p>
            </div>
            <div class="flex justify-center items-center w-full">
              <%= f.button class: "border rounded bg-green-500 font-semibold py-2 px-4 my-2" %>
            </div>
          </div>
        <% end %>
        <%= link_to "Return Home", root_path, class: "border rounded bg-gray-500 text-gray-50 font-semibold py-2 px-4 my-2" %>
      </div>
    </div>
  </div>
</section>
