<% turbo_frame_tag :edit_blog do %>
  <% if @blog.user.first_name == current_user.first_name %>
    <main class="w-full flex justify-center items-center text-terminal-window mt-2">
      <div class="lg:w-4/5 flex justify-center items-center lg:bg-slate-600">
        <div class="flex flex-col justify-start items-start pb-5">
          <h1 class="m-2 text-xl bg-sky-50 p-2 rounded-sm">Edit Article ( no. <%= @blog.id %> )</h1>
          <%= form_with model: @blog do |form| %>
            <% if form.object.errors.any? %>
              <div>
                <% form.object.errors.full_messages.each do |message|  %>
                  <div class="text-red-500"><%= message %></div>
                <% end %>
              </div>
            <% end %>
            <div class="flex flex-col my-2 lg:mx-5 bg-slate-100 p-2 rounded-sm">
              <div class="text-lg">
                <%= form.label :cover_image %>
              </div>
              <% if @blog.cover_image.present? %>
                <div id="<%= dom_id(@blog, :cover_image) %>" class="flex flex-col justify-center items-center">
                  <%= image_tag @blog.cover_image, class: "w-1/3 py-2" %>
                  <%= link_to "Remove cover image", cover_image_delete_path(@blog), class: "border border-input-background rounded bg-red-400 py-1 px-2 my-2", data: { turbo_method: :delete, turbo_confirm: "are you sure?" } %>
                </div>
              <% end %>
              <div class="rounded p-2">
                <%= form.file_field :cover_image %>
              </div>
              <div class="my-2">
                <%= form.label :title, class: "bg-slate-600 text-slate-50 font-bold py-2 px-2 pe-2 rounded" %>
                <%= form.text_field :title, class: "rounded" %>
              </div>
              <div class="flex flex-col justify-center items-center w-full lg:w-4-5">
                <%= form.label :body %>
                <%= form.rich_text_area :body, class: "custom-min-height bg-slate-50 w-full" %>
              </div>
              <div class="flex justify-center items-center w-full my-4">
                <%= form.label :published_at, class: "bg-slate-600 text-slate-50 font-bold py-2 px-2 m-2 rounded" %>
                <%= form.datetime_select :published_at, include_blank: true %>
              </div>
              <div class="flex justify-center items-center w-full">
                <%= form.button class: "border border-input-background rounded bg-sky-400 py-2 px-4 my-2" %>
              </div>
            </div>
          <% end %>
          <div class="flex justify-center items-center w-full">
            <%= button_to "Delete", @blog, class: "border border-input-background-100 rounded bg-red-400 py-1 px-2 my-2", method: :delete, data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    </main>
  <% else %>
    <main class="w-full h-screen">
      <div class="flex justify-center items-center flex-col w-full h-screen">
        <h1 class="text-red-300 my-3">Oops! It appears that you are not the owner of this post.</h1>
        <%= link_to "Back to Blogs", blogs_path, class: "underline text-sky-300" %>
      </div>
    </main>
  <% end %>
<% end %>