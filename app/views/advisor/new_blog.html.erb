<section class="bg-gray-900 mt-20 min-h-[calc(100vh-88px)]">
  <div class="py-8 sm:px-4 mx-auto max-w-screen-xl lg:py-16">
    <div class="bg-gray-800 border border-gray-700 rounded-lg lg:p-8 md:p-12 mb-8 mx-2 p-2">
      <div class="flex flex-col justify-center items-center pb-5">
        <h1 class="m-2 text-gray-400 p-2 text-base sm:text-lg md:text-2xl">New Article</h1>
        <!--New Form-->
        <%= form_with(model: @blog, url: advisor_create_blog_path) do |f| %>
          <!--Errors-->
          <% if f.object.errors.any? %>
            <div>
              <% f.object.errors.full_messages.each do |message|  %>
                <div class="text-red-500"><%= message %></div>
              <% end %>
            </div>
          <% end %>
          <!---->
          <div class="flex flex-col my-2 lg:mx-5 md:p-4 rounded-lg md:border border-gray-700 sm:max-w-3xl">
            <div class="text-lg text-gray-800 bg-gray-500 border border-gray-700 rounded-lg mx-2 p-2">
              <div class="text-lg">
                <%= f.label :cover_image, class: "lg:text-2xl px-2" %>
              </div>
              <div class="rounded p-2">
                <%= f.label :cover_image, "Select Image" %>
                <%= f.file_field :cover_image, class: "block w-full text-sm border rounded-lg cursor-pointer text-gray-800 focus:outline-none bg-gray-600 border-gray-700" %>
              </div>
            </div>
            <div class="m-2">
              <%= f.label :title, class: "block mb-2 text-sm font-medium text-white px-3" %>
              <%= f.text_field :title, class: "border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
            </div>
            <div class="flex flex-col justify-center items-center my-2 w-full lg:w-4-5 text-white bg-gray-500 py-2 sm:px-2 rounded-lg ">
              <div class="flex justify-start items-start w-full">
                <%= f.label :content, class: "block mb-2 text-sm font-medium text-white" %>
              </div>
              <%= f.rich_text_area :content, class: "flex flex-wrap p-2.5 w-full text-sm rounded-lg border bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500 max-w-2xl" %>
            </div>
            <div class="flex flex-wrap justify-center items-center w-full my-4 text-white">
              <%= f.label :published_at, class: "bg-slate-600 text-slate-50 font-medium py-2 px-2 m-2 rounded-lg" %>
              <%= f.datetime_select :published_at, include_blank: true %>
            </div>
            <div class="flex justify-center items-center w-full">
              <%= f.button class: "border rounded bg-green-500 font-semibold py-2 px-4 my-2" %>
            </div>
          </div>
        <% end %>
        <%= link_to "Return Home", advisor_path, class: "border rounded bg-gray-500 text-gray-50 font-semibold py-2 px-4 my-2" %>
      </div>
    </div>
  </div>
</section>
