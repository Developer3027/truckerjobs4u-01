<%= form_with scope: :newsletter, url: landing_newsletter_path, class: "max-w-sm mx-auto" do |f| %>
  <div class="items-center mx-auto mb-3 space-y-4 max-w-screen-sm sm:flex sm:space-y-0">
    <div class="relative w-full">
      <label for="email_news" class="hidden mb-2 text-sm font-medium text-gray-300">Email address</label>
      <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
        <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
      </div>
      <%= f.email_field :email, id: "email_news", placeholder: "Enter your email", autocomplete: "off", class: "block p-3 pl-10 w-full text-sm rounded-lg border sm:rounded-none sm:rounded-l-lg bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-primary-500 focus:border-primary-500" %>
    </div>
    <div>
      <%= f.submit "Subscribe", class: "text-white py-3 px-5 w-full text-sm font-medium text-center rounded-lg border cursor-pointer sm:rounded-none sm:rounded-r-lg bg-primary-600 hover:bg-primary-700 focus:ring-primary-800" %>
    </div>
  </div>
  <div class="mx-auto max-w-screen-sm text-xs text-left text-gray-300">
    <%= f.check_box :pp_check, checked: true %>&nbsp; I agree with the
    <%= link_to "Privacy Policy", root_path, class: "font-medium text-blue-500 hover:underline" %>
  </div>
  <div class="text-xs text-orange-300 text-left pt-1">
    * Must agree to privacy policy to recieve Newsletters *
  </div>
<% end %>