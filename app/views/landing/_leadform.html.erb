<%= form_with scope: :lead, url: create_lead_path, method: "post", class: "max-w-sm mx-auto" do |f| %>
  <div class="flex flex-col sm:flex-row w-full">
    <div class="mb-5 text-start mr-1">
      <div class="flex">
        <%= f.label :first_name, "First Name", for: "first_name", class: "block mb-2 text-sm font-medium text-white" %>
        <span class="text-orange-300 pl-2">*</span>
      </div>
      <%= f.text_field :first_name, id: "first_name", placeholder: "John", autocomplete: "off", class: " border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div class="mb-5 text-start ml-1">
      <div class="flex">
        <%= f.label :last_name, "Last Name", for: "last_name", class: "block mb-2 text-sm font-medium text-white" %>
        <span class="text-orange-300 pl-2">*</span>
      </div>
      <%= f.text_field :last_name, id: "last_name", placeholder: "Smith", autocomplete: "off", class: " border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
    </div>
  </div>
  <div class="mb-5 text-start">
    <div class="flex">
      <%= f.label :lead_email, "Email", for: "lead_email", class: "block mb-2 text-sm font-medium text-white" %>
      <span class="text-orange-300 pl-2">*</span>
    </div>
    <%= f.email_field :lead_email, id: "lead_email", placeholder: "name@example.com", autocomplete: "off", class: " border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  <div class="mb-5 text-start">
    <div class="flex">
      <%= f.label :phone, "Phone", for: "phone", class: "block mb-2 text-sm font-medium text-white" %>
      <span class="text-orange-300 pl-2">*</span>
    </div>
    <%= f.text_field :phone, id: "phone", placeholder: "555 888 1234", autocomplete: "off", class: " border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  <div class="mb-5 text-start">
    <div class="flex">
      <%= f.label :location, "Location", for: "location", class: "block mb-2 text-sm font-medium text-white" %>
      <span class="text-orange-300 pl-2">*</span>
    </div>
    <%= f.text_field :location, id: "location", placeholder: "Chicago, IL", autocomplete: "off", class: " border text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  <div class="mx-auto max-w-screen-sm text-xs text-left text-gray-300">
    <%= f.check_box :pp_check, checked: true  %>&nbsp; I agree with the
    <%= link_to "Privacy Policy", root_path, class: "font-medium text-blue-600 text-blue-500 hover:underline" %>.
  </div>
  <div class="text-xs text-orange-300 text-left pt-2">* Must agree to privacy policy for services *</div>
  <%= f.submit "Send", class: "text-white focus:ring-4 focus:outline-none font-medium rounded-lg text-sm w-full sm:w-auto mt-4 px-5 py-2.5 text-center bg-blue-600 hover:bg-blue-700 focus:ring-blue-800 cursor-pointer" %>
<% end %>